{
  "$schema": "https://mintlify.com/docs.json",
  "theme": "mint",
  "name": "Modem",
  "description": "Documentation for Modem, the agentic product teammate that aggregates feedback from Slack, Discord, GitHub, and email into actionable insights.",
  "colors": {
    "primary": "#44BDA3",
    "light": "#5FCDB3",
    "dark": "#3AA78E"
  },
  "favicon": "/favicon.svg",
  "css": "/custom.css",
  "fonts": {
    "heading": {
      "family": "unit",
      "weight": 500
    },
    "body": {
      "family": "Roboto",
      "weight": 400
    }
  },
  "navigation": {
    "groups": [
      {
        "group": "Getting Started",
        "pages": [
          "index",
          "quickstart",
          "core-concepts",
          "use-cases"
        ]
      },
      {
        "group": "Understanding Your Data",
        "pages": [
          "guides/topics",
          "guides/participants",
          "guides/feedback-categories"
        ]
      },
      {
        "group": "Integrations",
        "pages": [
          "integrations/overview",
          "integrations/slack",
          "integrations/discord",
          "integrations/github",
          "integrations/linear",
          "integrations/email"
        ]
      },
      {
        "group": "Developers",
        "pages": [
          "developers/mcp"
        ]
      },
      {
        "group": "Features",
        "pages": [
          "features/ai-analysis",
          "features/technical-crm",
          "features/agent",
          "features/scheduled-tasks"
        ]
      },
      {
        "group": "Account",
        "pages": [
          "features/team-management",
          "features/security-privacy"
        ]
      }
    ],
    "global": {
      "anchors": [
        {
          "anchor": "Dashboard",
          "href": "https://app.modem.dev",
          "icon": "gauge"
        }
      ]
    }
  },
  "logo": {
    "light": "/logo/light.svg",
    "dark": "/logo/dark.svg"
  },
  "navbar": {
    "links": [
      {
        "label": "Support",
        "href": "mailto:support@modem.dev"
      }
    ],
    "primary": {
      "type": "button",
      "label": "Get Started",
      "href": "https://app.modem.dev"
    }
  },
  "footer": {
    "socials": {
      "x": "https://x.com/modemdev",
      "github": "https://github.com/modem-dev",
      "discord": "https://discord.gg/modem"
    }
  }
}
